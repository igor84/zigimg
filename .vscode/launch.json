{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug tests",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build tests",
            "stopAtEntry": false,
            "linux": {
                "type": "gdb",
                "target": "zig-out/zigimgtest",
                "valuesFormatting": "parseText",
                "arguments": "path/to/zig/exe/not/really/needed"
            },
            "windows": {
                "type": "cppvsdbg",
                "program": "zig-out/zigimgtest.exe",
                "args": ["path/to/zig/exe/not/really/needed"]
            }
        }
    ]
}